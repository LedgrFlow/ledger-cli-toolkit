; -*- Ledger -*-
; Demo de archivo Ledger en dólares

; Ejemplo de metadatos para Ledger

;;; [currency]
;;; MXN, USD, EUR

;;; [Taxes]
;;; IVA = 16
;;; RET_ISR = 1.25

;;; [snippet:gasolina]
;;; $DATE * Gasolina
;;;     Expenses:Transport  $monto
;;;     Assets:Cash

;;; [snippet:sueldo]
;;; value = $DATE * Sueldo
;;;   Assets:Bank:Checking  $monto
;;;   Income:Salary


; Aplicaciones:
; +{IMP} → Agrega impuesto
; ={IMP} → Ya incluido (calcula base)
; -{IMP} → Retención (descuenta)


; ==============================
;         Plan de cuentas
; ==============================

; Activos
account Assets:Bank:Checking
  description Money in your bank account
  alias Bank Account
  type asset

account Assets:Bank:Savings
  description Money in your savings account
  alias Savings Account
  type asset

account Assets:Cash
  description Money in your wallet
  alias Cash
  type asset

account Assets:Investments:Stocks
  description Money invested in stocks
  alias Stocks
  type asset

account Assets:AccountsReceivable
  description Money received from your customers
  alias Receivable
  type asset

; Pasivos
account Liabilities:CreditCard:Visa
  description: Money owed to your credit card
  alias: Credit Card
  type: liability

account Liabilities:Loan:CarLoan
  description: Money owed to you by your car loan
  alias: Loan
  type: liability

; Capital
account Equity:OpeningBalances
  description: Opening balances
  alias: Opening Balances
  type: equity

account Equity:Owner
  description: Capital owned by you
  alias: Owner
  type: equity

; Ingresos
account Income:Salary
  description: Salary income
  alias: Salary
  type: income

account Income:Investments:Dividends
  description: Dividend income
  alias: Dividends
  type: income

account Income:Freelance
  description: Freelance income
  alias: Freelance
  type: income

; Egresos
account Expenses:Rent
  description: Rent expense
  alias: Rent
  type: expense

account Expenses:Utilities
  description: Utilities expense
  alias: Utilities
  type: expense

account Expenses:Food:Groceries
  description: Groceries expense
  alias: Groceries
  type: expense

account Expenses:Food:DiningOut
  description: Dining out expense
  alias: Dining Out
  type: expense

account Expenses:Transportation:Gas
  description: Gas expense
  alias: Gas
  type: expense

account Expenses:Transportation:Maintenance
  description: Maintenance expense
  alias: Maintenance
  type: expense

account Expenses:Entertainment
  description: Entertainment expense
  alias: Entertainment
  type: expense

account Expenses:Travel
  description: Travel expense
  alias: Travel
  type: expense

account Expenses:Insurance:Car
  description: Car insurance expense
  alias: Car Insurance
  type: expense

account Expenses:Insurance:Health
  description: Health insurance expense
  alias: Health Insurance
  type: expense

account Expenses:Education
  description: Education expense
  alias: Education
  type: expense

account Expenses:Medical
  description: Medical expense
  alias: Medical
  type: expense

account Expenses:Shopping
  description: Shopping expense
  alias: Shopping
  type: expense

